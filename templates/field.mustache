{{!
    @template filter_signature/field

    The purpose of this template is to render the canvas for the signature

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * contextid
    * signaturepath

    Example context (json):
    {
        "contextid": "526",
        "signaturepath": "https://www.mymoodlesite.org/pluginfile.php/2354/filter_signature/signature/1/",
    }
}}
<div id="filter_signature_field_{{uniqid}}" class="filter_signature_field">
    {{#signaturepath}}
    <img src="{{signaturepath}}" alt="Signature" style="height: 250px !important; width: 1000px;" />
    {{/signaturepath}}
    {{^signaturepath}}
    <input type="hidden" id="id_signing-{{uniqid}}" value="Data/Base64" />
    <input type="hidden" id="id_contextid-{{uniqid}}" value="{{context}}" />
    <input type="hidden" id="id_subkey-{{uniqid}}" value="{{subkey}}" />
    <div class="form-group row">
        <div class="col-md-3">
            <a href="#" id="id_submitbutton-{{uniqid}}" class="btn btn-primary btn-block">
                {{#str}} sign, filter_signature {{/str}}
            </a>
        </div>
        <div class="col-md-9">
            <canvas id="canvas-{{uniqid}}" class="form-control" style="height: 250px !important;  width: 1000px;"></canvas>
            <a class='btn btn-secondary' id='clearCanvas-{{uniqid}}' role='button'>{{#str}} reset {{/str}}</a>
        </div>
    </div>
    {{/signaturepath}}
</div>

{{#js}}
require(['filter_signature/signingjs'], function(s) { s.init('{{uniqid}}'); });
{{/js}}
